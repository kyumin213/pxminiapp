@import '../wishing/wishing.wxss';
.mask80 {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.8);
}
.pop-help {
  width: 534rpx;
  height: 654rpx;
  background: url(https://prise-picture.oss-cn-shenzhen.aliyuncs.com/20181129114001651378038.png) no-repeat;
  background-size: contain;
  position: absolute;
  top: 180rpx;
  left: 50%;
  transform: translate(-50%,0);
  box-sizing: border-box;
  padding-top: 290rpx;
}
.pop-help-x {
  top: 288rpx;
}
.pop-title {
  font-size: 32rpx;
  margin-bottom: 18rpx;
  text-align: center;
}
.pop-desc {
  color: #838383;
  font-size: 26rpx;
  width: 380rpx;
  margin: 0 auto 28rpx;
}
.btn-help, .btn-wishing, .btn-gray {
  width: 386rpx;
  height: 66rpx;
  box-sizing: border-box;
  margin: 0 auto 24rpx;
  border-radius: 30rpx;
  background: linear-gradient(to bottom,#FC5C56,#F72F2B);
  font-size: 34rpx;
  text-align: center;
  line-height: 66rpx;
  color: #fff;
}
.btn-wishing {
  background: none;
  border:2rpx solid #F72F2B;
  color: #F72F2B;
}
.btn-gray {
  background: none;
  border: 2rpx solid #A6A6A6;
  color: #A6A6A6;
}