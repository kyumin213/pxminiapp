/* pages/address/address.wxss */

.top-item {
  background-color: #fff;
  /* height: 170rpx; */
  width: 100vw;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
}
.top-item:first-child::before {
  content: '';
  display: block;
  width: 100%;
  position: absolute;
  height: 1rpx;
  top: 0;
  left: 0;
  background: #d8d8d8;
  transform: scaleY(0.5)
}
.item-top{
  justify-content: space-between;
  /* padding: 20rpx; */
  display: flex;
}

.item-bottom{
  /* padding: 20rpx; */
  margin-top: 20rpx;
}

.text-item {
  font-size: 30rpx;
  color: #333;
  display: flex;
  align-items: center;
}
.text-item image {
  width: 32rpx;
  /* height: 32rpx; */
  margin-right: 20rpx;
}
.address-empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.address-empty image {
  width: 140rpx;
  height: 140rpx;
  margin: 232rpx 0 48rpx;
}
.address-empty text {
  font-size: 30rpx;
  color: #999;
}
.add-address {
  font-size: 34rpx;
  color: #F72F2B;
  background: #fff;
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
}