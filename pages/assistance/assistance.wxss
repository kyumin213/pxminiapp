@import '../openBox/openBox.wxss';
.assistance-dialog{
  width: 670rpx;
  min-height: 620rpx;
  background: #fff;
  border-radius: 8rpx;
  padding-top: 80rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  overflow: hidden;
  box-sizing: border-box;
  padding-bottom: 40rpx;
  /* animation: a 10s infinite linear; */
}
.count {
  position: absolute;
  font-weight: bold;
  color: #FFAC04;
  right: 200rpx;
  top: 520rpx;
  font-size: 24rpx; 
  animation: a .8s ease-in-out;
  display: none
}
.status-spec {
  height: 82rpx;
}
@keyframes a{
	form{
    /* top: 500rpx;
    right: 200rpx;  */
    font-size: 28rpx;
    opacity: 0;
    transform: translate3d(0,0,0)
	}
	to{
		 /* top: 200rpx;
    right: 120rpx;  */
    font-size: 64rpx;
    opacity: 1;
    transform: translate3d(80rpx,-320rpx,0)       
	}
}