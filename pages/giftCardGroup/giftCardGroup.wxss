.gift-wrap {
  width: 686rpx;
  /* min-height: 768rpx; */
  border-radius: 12rpx;
  background: #fff;
  margin: 0 auto;
  position: relative;
  padding: 20rpx 0 60rpx;
}
.gift-wrap::before {
  content: '';
  position: absolute;
  width: 72rpx;
  height: 210rpx;
  background: url(https://image.prise.shop/images/2018/08/06/1533538827137455.png) no-repeat;
  background-size: contain;
  top: 290rpx;
  left: -36rpx;
}
.gift-wrap::after {
  content: '';
  position: absolute;
  width: 112rpx;
  height: 128rpx;
  background: url(https://image.prise.shop/images/2018/08/06/1533538830169337.png) no-repeat;
  background-size: contain;  
  right: -32rpx;
  bottom: 160rpx;
}
.pic-title {
  width: 320rpx;
  height: 98rpx;
  margin: 0 auto 38rpx;
  background: url(https://image.prise.shop/images/2018/08/06/1533539536900965.png) no-repeat;
  background-size: contain;
}
.gift-item {
  height: 200rpx;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.gift-item image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.gift-right {
  position: relative;
  height: 200rpx;
  width: 380rpx;
}
.gift-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 18rpx;
  width: 380rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.gift-props {
  font-size: 26rpx;
  color: #999;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden;
}
.gift-bottom {
  position: absolute;
  bottom: 20rpx;
  left: 0;
  width: 100%;
}
.price {
  font-size: 32rpx;
  font-weight: bold;
  float: left;
}
.number {
  position: absolute;
  bottom: 20rpx;
  left: 0;
  font-size: 26rpx;
  padding-left: 6rpx;
}
.number::after {
  content: '';
  background: RGBA(250, 70, 128, 0.1);
  width: 80rpx;
  height: 16rpx;
  position: absolute;
  bottom: 0;
  left: 0
}
.sendBtn {
  width: 520rpx;
  height: 92rpx;
  background: url(https://image.prise.shop/images/2018/08/06/1533540536555979.png);
  background-size: contain;
  margin: 60rpx auto 0;
  text-align: center;
  line-height: 92rpx;
  color: #fff;
  font-weight: bold;
  font-size:  32rpx;
}
.refund-tips {
  color: RGBA(214, 43, 98, 1);
  font-size: 24rpx;
  margin: 60rpx auto 0;
  text-align: center;
}
/*actionsheetDialog  */
.actionsheetDialog {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 9;
}
.mask {
  background: rgba(0,0,0,0.4);
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.line100 {
  width: 100%;
  height: 1rpx;
  background: #eee;
  transform: scaleY(0.5);
}
.btn-groups {
  position: absolute;
  bottom: 0;
  height: 282rpx;
  width: 100%;
  background: #efeff4;
}
.btn-groups .abtn {
  width: 100%;
  height: 90rpx;
  border-radius: 0;
  border: none;
  background: #fff;
}
.btn-groups .abtn::after {
  border-radius: 0;
  border: none;
}
.cancel{
  margin-top: 12rpx;
}
.canvas-box {
  position: fixed;
  top: 0;
  width: 100%;
  height: 70%;
  background: rgba(0,0,0,0.2);
  z-index: -1;
}
.canvas-box canvas {
  z-index: -1;
  position: relative;
}