.p88{
  padding-top: 78rpx;
}
.tab-bar {
  height: 78rpx;
  line-height: 78rpx;
  overflow: hidden;
  width: 100%;
  display: flex;
  align-items: center;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
} 
.line {
  width: 100%;
  height: 1rpx;
  transform: scaleY(0.5);
  background: #eee;
}
.special-name {
  text-align: center;
  margin: 0 32rpx; 
  display: inline-block;
  font-size: 28rpx;
  position: relative;
  height: 78rpx;
  line-height: 78rpx;
  color: #000;
  flex: 1
}
.active{
  color: #333333;
  font-weight: bold;
}
 .active::after {
  position: absolute;
  height: 4rpx;
  background: #F72F2B;
  width: 44rpx;
  bottom: 0;
  content: '';
  left: 50%;
  transform: translate(-50%,0);
  border-radius: 4rpx;
} 
.record-list {
  background: #fff;
  overflow: hidden;
  margin-top: 20rpx;
}
.item-header {
  height: 120rpx;
  /* line-height: 88rpx; */
  width: 100%;
  box-sizing: border-box;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
}
.order-number {
  color: #999;
  flex: 1;
  font-size: 24rpx;
  line-height: 40rpx;
}
.order-status {
  color: #F77E33;
}
.order-status image {
  width: 120rpx;
  height: 120rpx;
}
.scrollx {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  height: 212rpx;
  padding: 32rpx 0 0 32rpx;
  box-sizing: border-box;
}
.scrollx view{
  display: inline-block;
  margin-right: 40rpx;
  color: #999;
  font-size: 26rpx;
}
.line100 {
  width: 690rpx;
  height: 1rpx;
  background: #eee;
  transform: scaleY(0.5);
  margin: 0 auto;
}
.item-footer {
  height: 104rpx;
  text-align: right;
  padding-right: 32rpx;
  box-sizing: border-box;
  width: 100%;
  line-height: 104rpx;
  font-size: 26rpx;
}
.item-footer text{
  font-weight: bold;
  font-size: 30rpx;
}
.item-btn {
  height: 100rpx;
  padding-right: 32rpx;
}
.send-btn {
  width: 180rpx;
  height: 64rpx;
  border-radius: 32rpx;
  border: 2rpx solid #F72F2B;
  color: #F72F2B;
  line-height: 64rpx;
  text-align: center;
  margin-top: 18rpx;
  margin-left: 20rpx;
  font-size: 26rpx;
}
.black {
  color: #333;
  border: 2rpx solid #ccc;
}
.empty-order {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.empty-order image {
  width: 140rpx;
  height: 140rpx;
  margin: 232rpx 0 48rpx;
}
.empty-order text {
  color: #999;
  font-size: 30rpx;
}
.item {
  display: flex;
  align-items: center;
  height: 180rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.item-right {
  width: 550rpx;
}
.item image {
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
}
.right-top {
  margin-bottom: 20rpx;
}
.right-top,.right-bottom {
  display: flex;
  align-items: center;
  width: 100%;
}
.productTitle,.productSellpoint {
  width: 420rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  flex: 1;
  margin-right: 40rpx;
}
.productSellpoint,.buynumbers {
  color: #999;
  font-size: 24rpx;
}