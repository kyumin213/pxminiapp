.exchange {
  width: 670rpx;
  height: 88rpx;
  border-radius: 8rpx;
  margin: 50rpx auto 30rpx;
  background: #F72F2B;
  color: #FFFFFF;
  font-size: 32rpx;
  text-align: center;
  line-height: 88rpx;
  /* box-sizing: border-box; */
}
.exchange-x {
  margin: 74rpx auto 38rpx;
}
.btn-getcash {
  width: 666rpx;
  height: 84rpx;
  background: #FFFFFF;
  color: #F72F2B;
  border: 2rpx solid #F72F2B;
  margin-top: 0;
}
.accouts-detail {
  position: absolute;
  right: 38rpx;
  top: 34rpx;
  color: #fff;
  font-size: 26rpx;
  width: 70rpx;
  text-align: center;
}
.accouts-detail image {
  width: 54rpx;
  height: 54rpx;
  display: block;
  margin: 0 auto 6rpx;
}
.contact {
  position: absolute;
  bottom: 34rpx;
  left: 50%;
  transform: translate(-50%, 0);
  color: #F74541;
  font-size: 32rpx;
  background: none;
  border: none;
  display: flex;
  align-items: center;
}
.contact::after {
  box-shadow: none;
  border: none;
}
.contact image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}
.index {
  color: #999999;
  font-size: 30rpx;
  text-align: center;
}