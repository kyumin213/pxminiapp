/* pages/wallet/wallet.wxss */
.wallet-bg {
  height: 680rpx;
  width: 100%;
  background: linear-gradient(to bottom,#FC5C56,#F72F2B) ;
  overflow: hidden;
  position: relative;
}
.wallet-bg-x {
  height: 750rpx;
}
.bg-down {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 308rpx;
  width: 100%;
  background: url(https://prise-picture.oss-cn-shenzhen.aliyuncs.com/20181227103108945534211.png) no-repeat;
  background-size: cover;
}
.bg-up {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 339rpx;
  width: 100%;
  background: url(https://prise-picture.oss-cn-shenzhen.aliyuncs.com/20181227103109056162339.png) no-repeat;
  background-size: cover;
}
.content {
  position: relative;
  height: 680rpx;
  width: 100%;
  overflow: hidden;
}
.content-x {
  height: 750rpx;
}
.total-accouts {
  margin: 160rpx auto;  
}
.total-accouts view {
  color: #fff;
  font-size: 32rpx;
  text-align: center;
}
.total-accouts text {
  font-size: 100rpx;
  display: block;
  color: #fff;
  font-weight: bold;
  text-align: center;
}
.accouts-info {
  display: flex;
  align-items: center;
  margin: 160rpx auto 40rpx;
  justify-content: center;
}
.accouts-info-x {
  margin-top: 230rpx;
}
.item-left,.item-right {
  color: #fff;
  font-size: 26rpx;
  width: 49%;
  text-align: center;
}
.item-left text, .item-right text {
  font-size: 34rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}
.item-right view, .item-left view{
  color: #fff;
}
.item-middle {
  width: 2rpx;
  height: 62rpx;
  background: #fff;
  border-radius: 6rpx;
}
