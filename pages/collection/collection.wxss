/* pages/collection/collection.wxss */
.bg-gray {
  background: rgb(244,244,244);
  overflow: hidden;
  padding-bottom: 80rpx;
}
.box {
  /* display: flex;
  align-items: center; */
  padding-left: 8rpx;
  width: 100%;
  box-sizing: border-box;
  /* height: 100%; */
}

.item-view {
  width: 363rpx;
  height: 540rpx;
  background: #fff;
  margin: 8rpx 8rpx 0 0;
  box-sizing: border-box;
  float: left;
}

.item-view image {
  width: 363rpx;
  height: 363rpx
}

.item-bottom{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 20rpx 0 20rpx 20rpx;
}

.item-text{
  color: #333;
  width: 300rpx;
  overflow: hidden;
  font-size: 28rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: start;
}

.item-bottom-view{
  text-align: left;
  padding-left: 20rpx;
  position: relative;
}
.invalid {
  background: #ccc;
  color: #fff;
  text-align: center;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 24rpx;
  width: 100%;
  position: absolute;
  left: 0;
  top: -132rpx;
}

.item-prise{
  color: #F72F2B;
  font-size: 32rpx;
}
.beforePrice{
  color: #999;
  font-size: 26rpx;
  text-decoration: line-through;
  margin-left: 10rpx;
}
.off .item-prise, .off .beforePrice, .off .item-text {
  color: #CCCCCC;
}
.item-bottom-view image{
  width: 40rpx;
  height: 40rpx;
}
.collect-empty{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.collect-empty image {
  width: 140rpx;
  height: 140rpx;
  margin: 232rpx 0 48rpx;
}
.collect-empty text {
  font-size: 30rpx;
  color: #999;
}
