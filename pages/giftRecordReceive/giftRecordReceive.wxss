@import '../giftRecordDetails/giftRecordDetails.wxss';
.p60 {
  padding-bottom: 120rpx;
}
.order-join{
  height: 168rpx;
}
.send-userinfo {
  height: 136rpx;
  background: #fff;
  width: 100%;
  padding: 20rpx 0 20rpx 36rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}
.send-userinfo image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 32rpx;
}
.times {
  font-size: 26rpx;
  color: #999;
}
.username{
  margin-bottom: 10rpx;
}
.add-address {
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.address-left {
  display: flex;
  align-items: center;
  flex: 1;
}
.position-icon {
  width: 38rpx;
  height: 38rpx;
  margin: 0 16rpx 0 36rpx;
}
.gogo {
  width: 28rpx;
  height: 28rpx;
  margin-right: 30rpx;
}
.address-box {
  height: 258rpx;
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx 30rpx 0;
  box-sizing: border-box;
}
.address-header, .address-user {
  width: 100%;
  display: flex;
  align-items: center;
  height: 60rpx;
}
.row-left {
  flex: 1;
}
.bold {
  font-weight: bold;
}
.red {
  color: #F72F2B
}
.address-info {
  width: 100%;
}