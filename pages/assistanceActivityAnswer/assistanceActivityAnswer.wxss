@import '../answerGame/answerGame.wxss';
.statutips2 {
  color: #fff;
  text-align: center;
  padding: 40rpx 0;
}
.bingo-img {
  width: 222rpx;
  height: 66rpx;
  display: block;
  margin: 80rpx auto 24rpx;
}
.bingo-list {
  border:2rpx solid rgba(255, 255, 255, 0.2);
  background: #2d1564;
  width: 630rpx;
  height: 666rpx;
  border-radius: 20rpx;
  margin: 0 auto 80rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding-left: 32rpx;
  box-sizing: border-box;
  padding-top: 30rpx;
}
.bingo-items image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
  display: block;
  border: 4rpx solid rgb(253, 224, 11);
  margin: 0 auto;
  box-sizing: border-box;
}
.bingo-items {
  width: 96rpx;
  text-align: center;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
}
.bingo-items:nth-child(5n) {
  margin-right: 0;
}
.nicknames {
  width: 96rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  color: #fff;
  font-size: 20rpx;
}
.rankscroll {
  max-height: 1800rpx;
}
.close {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  bottom: -120rpx;
  left: 50%;
  transform: translate(-50%,0);
}
.mask40 {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99;
}
.assistance-dialog {
  width: 646rpx;
  height: 666rpx;
  border-radius: 16rpx;
  background: #fff;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 100;
  padding-top: 140rpx;
  box-sizing: border-box;
}
.help {
  position: absolute;
  width: 220rpx;
  height: 220rpx;
  left: 50%;
  top: -110rpx;
  transform: translate(-50%,0);
}
.status-txt {
  color: #FD3B64;
  font-size: 40rpx;
  text-align: center;
  margin-bottom: 50rpx;
}
.status-spec {
  color: #888888;
  width: 536rpx;
  margin: 0 auto 60rpx;
}
.relive {
  width: 520rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #FD3B64;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 60rpx;
}
.gotoindex {
  color: #FD3B64;
  font-size: 32rpx;
  text-align: center;
}
.count {
  position: absolute;
  font-weight: bold;
  color: #FD3B64;
  right: 200rpx;
  top: 400rpx;
  font-size: 24rpx; 
  animation: a .8s ease-in-out;
  display: none
}
@keyframes a{
	form{
    font-size: 28rpx;
    opacity: 0;
    transform: translate3d(0,0,0)
	}
	to{
    font-size: 64rpx;
    opacity: 1;
    transform: translate3d(120rpx,-320rpx,0)       
	}
}