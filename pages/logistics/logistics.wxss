.logistics-status {
  width: 100%;
  height: 138rpx;
  background: #fff;
  padding: 24rpx 32rpx 0;
  box-sizing: border-box;
}
.logistics-status view {
  margin-bottom: 12rpx;
}
.logistics-status {
  margin-bottom: 22rpx;
}
.empty-msg {
  color: #999999;
  text-align: center;
  padding-top: 300rpx;
}
.logistics-list {
  background: #fff;
  padding: 24rpx 30rpx 0 40rpx;
  position: relative;
  overflow: hidden;
}
.line1 {
  width: 1rpx;
  height: 89%;
  background: #eee;
  transform: scaleX(0.5);
  position: absolute;
  left: 50rpx;
  top: 40rpx;
}
.item {
  width: 620rpx;
  padding-bottom: 30rpx;
  margin-left: 50rpx;
  position: relative;
}
.item .context {
  color: #999999;
  margin-bottom: 12rpx;
}
.circle {
  background: #D8D8D8;
  width: 12rpx;
  height: 12rpx;
  position: absolute;
  border-radius: 50%;
  left: -46rpx;
  top: 15rpx;
}
.ftime {
  color: #999999;
  font-size: 24rpx;
} 
.line620 {
  width: 620rpx;
  height: 1rpx;
  transform: scaleY(0.5);
}
.item:first-child .context {
  color: #333333
}
.item:first-child .circle {
  background: RGBA(247, 47, 43, 0.1);
  width: 20rpx;
  height: 20rpx;
  left: -50rpx;
  padding-top: 2rpx;
  box-sizing: border-box;
}
.small-circle {
  width: 16rpx;
  height: 16rpx;
  background: RGBA(247, 47, 43, 1);
  border-radius: 50%;
  margin: 0 auto;
}