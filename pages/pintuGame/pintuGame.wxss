.btn-group {
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  padding: 0 60rpx;
}
.btn-see,.btn-cancel{
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 40rpx;
  border-radius: 44rpx;
  background: rgba(0, 0, 0, 0.4);
  color: #999999;
