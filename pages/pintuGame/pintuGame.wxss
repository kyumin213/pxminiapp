/*拼图完成弹出  */
.closebtn {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  bottom: -100rpx;
  left: 50%;
  transform: translate(-50%,0);
  background: url(https://image.prise.shop/images/2018/07/20/1532075194926658.png) no-repeat;
  background-size: contain;
}
.closebtn::after {
  border: none;
  box-shadow: none;
}
.result-dialog{
