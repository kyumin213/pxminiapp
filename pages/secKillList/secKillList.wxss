.goods-item {
  width: 100%;
  margin-top: 16rpx;
  text-align: center;
  position: relative;
}
.goods-item image {
  width: 100%;
  height: 394rpx;
  display: block
}
.count-down {
  display: flex;
  align-items: center;
  /* justify-content: center; */
  width: 100%;
  height: 150rpx;
  box-sizing: border-box;
  padding-left: 120rpx;
  background: #fff;
}
.txt {
  color: #FD2A41;
  text-align: center;
  font-weight: bold;
  margin-right: 28rpx;
}
.txt view {
  font-size: 36rpx;  
  color: #FD2A41
}
.bg-red {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(to bottom,#FD2977,#FD2A39);
  border-radius: 6rpx;
  color: #fff;
  font-weight: bold;
  text-align: center;
  line-height: 80rpx;
  font-size: 50rpx;
}
.count-down image {
  width: 6rpx;
  height: 32rpx;
  margin: 0 10rpx;
}
.bg-seckill {
  background: #F6F6F6;
  padding-bottom: 80rpx;
}
.bottom-tips {
  color: #333;
  text-align: center;
  margin-top: 46rpx;
}
.bottom-tips text {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  margin: 0 4rpx;
}
.tips {
  width: 180rpx;
  height: 180rpx;
  background: RGBA(0, 0, 0, 0.4);
  color: #fff;
  font-size: 30rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  border-radius: 50%;
  line-height: 180rpx;
}