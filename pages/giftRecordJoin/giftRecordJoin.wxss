.remarks-tips {
  width: 100%;
  height: 90rpx;
  background: #fff;
  padding-bottom: 36rpx;
  position: relative;
  margin-top: -20rpx;
}
.remarks-box {
  width: 554rpx;
  height: 82rpx;
  background: #f4f4f4;
  position: absolute;
  right: 32rpx;
  top: 0;
  padding-left: 20rpx;
  box-sizing: border-box;
  line-height: 82rpx;
  border-radius: 4rpx;
}
.remarks-box::after {
  position: absolute;
  content: '';
  width: 0;
  height: 0;
  border-width: 8rpx;
  border-style: solid;
  border-color: transparent transparent #f4f4f4 transparent;
  top: -16rpx;
  left: 20rpx;
}