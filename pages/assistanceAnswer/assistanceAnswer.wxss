@import '../answerGame/answerGame.wxss';
.close {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  bottom: -120rpx;
  left: 50%;
  transform: translate(-50%,0);
}
.mask40 {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99;
}
.assistance-dialog {
  width: 646rpx;
  height: 666rpx;
  border-radius: 16rpx;
  background: #fff;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 100;
  padding-top: 140rpx;
  box-sizing: border-box;
}
.help {
  position: absolute;
  width: 220rpx;
  height: 220rpx;
  left: 50%;
  top: -110rpx;
  transform: translate(-50%,0);
}
.status-txt {
  color: #FD3B64;
  font-size: 40rpx;
  text-align: center;
  margin-bottom: 50rpx;
}
.status-spec {
  color: #888888;
  width: 536rpx;
  margin: 0 auto 60rpx;
}
.relive {
  width: 520rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #FD3B64;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 60rpx;
}
.gotoindex {
  color: #FD3B64;
  font-size: 32rpx;
  text-align: center;
}
.count {
  position: absolute;
  font-weight: bold;
  color: #FD3B64;
  right: 200rpx;
  top: 400rpx;
  font-size: 24rpx; 
  animation: a .8s ease-in-out;
  display: none
}
@keyframes a{
	form{
    font-size: 28rpx;
    opacity: 0;
    transform: translate3d(0,0,0)
	}
	to{
    font-size: 64rpx;
    opacity: 1;
    transform: translate3d(120rpx,-320rpx,0)       
	}
}