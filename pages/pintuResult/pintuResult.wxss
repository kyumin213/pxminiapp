.bg-gradient {
  background: linear-gradient(to bottom, #FD6166, #F64844);
  padding-bottom: 100rpx;
}
.bg-img {
  width: 100%;
  background: url(https://prise-picture.oss-cn-shenzhen.aliyuncs.com/20181019100729271671959.png) no-repeat;
  background-size: contain;
  overflow: hidden
}
.content {
  width: 690rpx;
  min-height: 864rpx;
  background: #fff;
  margin: 250rpx auto 120rpx;
  border-radius: 12rpx;
  position: relative;
  padding: 80rpx 0 60rpx;
  box-sizing: border-box;
}
.btn-white {
  margin-bottom: 40rpx;
}
/*用户信息  */
.userInfo {
  width: 140rpx;
  height: 140rpx;
  background: #fff;
  border-radius: 50%;
  top: -70rpx;
  left: 276rpx;
  position: absolute;
  padding: 10rpx;
  box-sizing: border-box;
}
.userpic {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: block;
}
.senderName {
  width: 590rpx;
  height: 56rpx;
  background: RGBA(245, 166, 35, 0.1);
  border-radius: 32rpx;
  margin: 0 auto 40rpx; 
  text-align: center;
  line-height: 56rpx;
  color: #F5A623;
}
.big-tips {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  width: 630rpx;
  margin: 0 auto 10rpx;
}
.small-tips {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  margin-bottom: 40rpx;
}
/*修改地址  */
.form-group {
  width: 610rpx;
  /* min-height: 40rpx;
  display: flex;
  align-items: center; */
  margin: 0 auto;
}
.form-group input {
  width: 610rpx;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 0 0 20rpx;
  box-sizing: border-box;
}
.form-group textarea{
  /* align-self: flex-start; */
  height: 160rpx;
  padding: 0 0 0 14rpx;
  box-sizing: border-box;  
  /* margin: -10rpx 0 0 -6rpx; */
}
.graybg input,.graybg textarea {
  background: #F6F6F6;
}
.m60 {
  margin-bottom: 60rpx;
}
.line-dialog {
  width: 610rpx;
  height: 1rpx;
  background: #eee;
  margin: 0 auto;
  transform: scaleY(0.5);
}
.label {
  width: 120rpx;
  margin-left: 12rpx;
  margin-right: 40rpx;
}
.address {
  align-self: flex-start;
}
.modify-address {
  color: #999;
  font-size: 26rpx;
  text-align: center;
  padding-bottom: 60rpx;
}
.modify-address text {
  color: #F72F2B
}
.btn-receive image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 12rpx;
}
.btn-receive {
  width: 610rpx;
  height: 90rpx;
  background: #F72F2B;
  border-radius: 48rpx;
  margin: 0 auto 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.go-details {
  color: #888888;
  text-decoration: underline;
  text-align: center;
}
/*礼物列表  */
.gifts-item {
  width: 622rpx;
  height: 200rpx;
  box-shadow: 0 0 34rpx rgba(0,0,0,0.07);
  margin: 20rpx auto 0;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  position: relative;
}
.gifts-item:first-child {
  margin-top: 34rpx;
}
.gifts-item:last-child {
  margin-bottom: 34rpx;
}
.gifts-item .product {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}
.gifts-list {
  margin-bottom: 80rpx;
}
.gccc {
  color: #ccc;
}
.overtime {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 100rpx;
  height: 100rpx;
}
.bottom-tip {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  text-align: center;
}
.nogift {
  width: 240rpx;
  height: 240rpx;
  display: block;
  margin: 0 auto 60rpx;
}
.btn-group {
  width: 610rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 auto 40rpx;
}
.btn {
  width: 280rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  box-sizing: border-box;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
}
.btn-left {
  border: 2rpx solid #F72F2B;
  color: #F72F2B
}
.btn-right {
  background: #F72F2B;
  color: #fff;
}