@import '../giftCardStatus/giftCardStatus.wxss';
.add-address {
  width: 622rpx;
  height: 88rpx;
  background: #F72F2B;
  color: #fff;
  margin: 0 auto;
  border-radius: 8rpx;
  text-align: center;
  line-height: 88rpx;
}
.address-dialog {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 9;
}
.mask {
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.4);
  position: absolute;
  left: 0;
  top: 0;
}
.address-container {
  width: 702rpx;
  height: 708rpx;
  background: #fff;
  border-radius: 32rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  padding: 0 26rpx;
  box-sizing: border-box;
}
.close {
  width: 27rpx;
  height: 27rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
.dialog-header {
  font-size: 34rpx;
  text-align: center;
  margin: 60rpx auto 32rpx;
  font-weight: bold;
}
.form-group {
  width: 650rpx;
  min-height: 40rpx;
  display: flex;
  align-items: center;
  margin: 25rpx 0;
}
.form-group input,.form-group textarea{
  width: 460rpx;
  height: 50rpx;
  padding: 0;
}
.form-group textarea{
  /* align-self: flex-start; */
  height: 100rpx;
  margin: -10rpx 0 0 -6rpx;
}
.line-dialog {
  width: 650rpx;
  height: 1rpx;
  background: #eee;
  margin: 0 auto;
  transform: scaleY(0.5);
}
.label {
  width: 120rpx;
  margin-left: 12rpx;
  margin-right: 40rpx;
}
.address {
  align-self: flex-start;
}
.confirm-address {
  background: #F72F2B;
  color: #fff;
  width: 622rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 34rpx;
  margin: 80rpx auto 0;
}
.btn500 {
  width:298rpx;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  text-align: center;
  line-height: 88rpx;
  margin-top: 80rpx;
}
.save {
  background: #F72F2B;
  color: #fff;
}
.modify{
  color: #F72F2B;
  border: 1rpx solid #F72F2B;
  background: #fff;
}