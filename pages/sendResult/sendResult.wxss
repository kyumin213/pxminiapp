.result-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.line-top {
  width: 100%;
  height: 1rpx;
  background: #d8d8d8;
  transform: scaleY(0.5);
}
.gotoshopping, .checkOrder {
  width: 290rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  color: #fff;
  background: #F72F2B;
  text-align: center;
}
.btn-group {
  width: 622rpx;
  margin: 0 auto;
}
.gift_success {
  width: 120rpx;
  height: 120rpx;
  margin: 150rpx 0 50rpx;
}
.result {
  margin-bottom: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
}
